@using StratML.Core.ThreeFive
@model StratML.Core.ThreeFive.Organization

<div class="row">
	<article class="col-sm-12 sortable-grid ui-sortable">
		<div class="jarviswidget jarviswidget-color-blueDark jarviswidget-sortable jarviswidget-collapsed" id="widget-@Model.Name" role="widget">
			<header class="ui-sortable-handle">
				<div class="jarviswidget-ctrls" role="menu">
					<a href="javascript:void(0);"
					   class="button-icon jarviswidget-toggle-btn"
					   rel="tooltip"
					   title=""
					   data-placement="bottom"
					   data-original-title="Collapse"><i class="fa fa-minus"></i></a>
				</div>
				<span class="widget-icon"> <i class="fa fa-users"></i> </span>
				<h2>@Model.Name</h2>
				<span class="jarviswidget-loader" style="display: none;"><i class="fa fa-refresh fa-spin"></i></span>
			</header>

			<div role="content">

				<!-- widget edit box -->
				<div class="jarviswidget-editbox">
					<!-- This area used as dropdown edit box -->

				</div>
				<!-- end widget edit box -->
				<!-- widget content -->
				<div class="widget-body">

					@if (Model.Strategy != null)
					{
						<h6>Mission</h6>
						<p>@Model.Strategy?.Mission?.Description</p>
						<h6>Vision</h6>
						<p>@Model.Strategy?.Vision?.Description</p>
					}

					@if (!string.IsNullOrEmpty(Model.Description))
					{
						<h6>Description</h6>
						<p>@Model.Description</p>
					}

					@if (Model.Role != null)
					{
						<h6>Roles</h6>
						<ul>
							@foreach (var role in Model.Role)
							{
								@Html.Partial("_Role", role)
							}
						</ul>
					}

					<div class="blockoff-left">
						<legend class="lead">
							Stakeholders
						</legend>

						@if (Model.Organization1 != null)
						{
							foreach (var org in Model.Organization1)
							 {
								 @Html.Partial("_Organization", org)
							 }
						}

						@if (Model.Individual != null)
						{
							<div class="row row-table equal">
								@foreach (var individual in Model.Individual)
								{
									@Html.Partial("_Individual", individual)
								}
							</div>
						}
					</div>
				</div>
			</div>
		</div>
	</article>
</div>



<style>
	@@media (min-width: 768px) {
		.row.equal {
			display: flex;
			flex-wrap: wrap;
		}

		.row.equal .col-md-4 {
			margin-bottom: 10px;
		}
	}
</style>
