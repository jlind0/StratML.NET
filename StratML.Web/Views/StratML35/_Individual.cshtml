@model StratML.Core.ThreeFive.Individual
@{ 
    var instanceGuid = Guid.NewGuid();
}
<div class="span4">
<div class="box">
    <div class="box-header">
        <i class="icon-user"></i>
        <h5>@Model.Surname, @Model.GivenName</h5>
        <button class="btn btn-box-right" data-toggle="collapse" data-target="#_@instanceGuid.ToString()">
            <i class="icon-reorder"></i>
        </button>
    </div>
    <div id="_@instanceGuid.ToString()" class="box-content collapse in">
        @if (Model.Role != null)
        {
        <h6>Roles</h6>
        <ul>
            @foreach (var role in Model.Role)
            {
            @Html.Partial("_Role", role);
            }
        </ul>
        }
    </div>
</div>
</div>

